{
  "info": {
    "name": "Image Search API (MERN + OAuth)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login with Google",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/google",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "google"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/logout",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "Search Images",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"term\": \"mountains\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/search",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "search"]
            }
          }
        },
        {
          "name": "Get Top Searches",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/top-searches",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "top-searches"]
            }
          }
        }
      ]
    },
    {
      "name": "History",
      "item": [
        {
          "name": "Get User Search History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/history",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "history"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}